<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="Log4netLoggerAppender"
            type="log4net.Appender.FileAppender">
    <file value="../../../Log4netLogging.txt" />
    <appendToFile value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date %level %message%newline" />
    </layout>
  </appender>
  <logger name="Framework.Log4netLoggerXmlFile">
    <level value="INFO" />
    <appender-ref ref="Log4netLoggerAppender" />
  </logger>
</log4net>